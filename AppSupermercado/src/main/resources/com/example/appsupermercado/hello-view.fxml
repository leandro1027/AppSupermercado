<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.appsupermercado.HelloController">
    <!-- MenuBar -->
    <MenuBar layoutY="0.0" prefHeight="25.0" prefWidth="300.0">
        <Menu text="Funcionalidades">
            <MenuItem accelerator="F1" onAction="#abrirCaixa" text="Caixa" />
            <MenuItem accelerator="F2" onAction="#abrirVerificadorDePreco" text="Verificador de Preço" />
        </Menu>
        <Menu text="Sobre">
            <MenuItem onAction="#abrirSobre" text="Nos conheça" />
        </Menu>
        <Menu text="Sair">
            <MenuItem onAction="#onSairButtonClick" text="Fechar sistema" />
        </Menu>
    </MenuBar>

    <!-- Layout Principal -->
    <VBox alignment="CENTER" layoutX="0.0" layoutY="25.0" prefWidth="300.0" spacing="20">
        <!-- Logo -->
        <ImageView fitHeight="150.0" fitWidth="166.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@images/logoCompreBemJavaFX.jpg" />
            </image>
        </ImageView>

        <Label text="Versão 1.0.0" />

        <!-- Botões -->
        <VBox alignment="CENTER" spacing="10">
            <Button onAction="#abrirCaixa" prefWidth="150" text="Caixa" />
            <Button onAction="#abrirVerificadorDePreco" prefWidth="150" text="Verificador de Preço" />
            <Button onAction="#abrirSobre" prefWidth="150" text="Nos conheça" />
            <Button onAction="#onSairButtonClick" prefWidth="150" text="Sair" />
        </VBox>
    </VBox>
</AnchorPane>
