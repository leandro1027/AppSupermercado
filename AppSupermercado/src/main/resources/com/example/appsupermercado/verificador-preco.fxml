<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="15.0" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.appsupermercado.VerificadorDePrecoController"
      prefHeight="300.0" prefWidth="400.0">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Verificador de Preço" style="-fx-font-weight: bold;"/>
    <Label text="Código do produto:"/>
    <TextField fx:id="codigoProdutoTextField" onKeyTyped="#onCodigoTyped"/>

    <Label text="Descrição:"/>
    <Label fx:id="produtoLabel" text="---"/>

    <Label text="Valor:"/>
    <Label fx:id="valorLabel" text="R$ 0,00"/>

</VBox>
